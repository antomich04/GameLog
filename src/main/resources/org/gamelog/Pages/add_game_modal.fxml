<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;"
      stylesheets="@../Styles/Add_Game_Modal.css"
      prefWidth="400" prefHeight="300"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.gamelog.controllers.AddGameModalController">

    <Label text="Add New Game" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <VBox spacing="10">
        <Label text="Game Name:" style="-fx-font-size: 14;"/>
        <ComboBox fx:id="gameSearchComboBox"
                  promptText="Enter the game name..."
                  prefWidth="350"
                  prefHeight="35"
                  editable="true"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Platform:" style="-fx-font-size: 14;"/>
        <ComboBox fx:id="platformComboBox"
                  promptText="Select platform..."
                  prefWidth="350"
                  prefHeight="35"/>
    </VBox>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-pref-width: 100; -fx-pref-height: 35;"/>
        <Button fx:id="addGameButton" text="Add Game"
                style="-fx-background-color: #1C3849; -fx-text-fill: white; -fx-pref-width: 120; -fx-pref-height: 35;"/>
    </HBox>
</VBox>