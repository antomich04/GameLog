<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootPane" spacing="20" styleClass="modal-root"
      prefWidth="400" prefHeight="300"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.gamelog.controllers.AddGameModalController">

    <Label text="Add New Game" styleClass="modal-title"/>

    <VBox spacing="10">
        <Label text="Game Name:" styleClass="input-label"/>
        <ComboBox fx:id="gameSearchComboBox"
                  promptText="Enter the game name..."
                  prefWidth="350"
                  prefHeight="35"
                  editable="true"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Platform:" styleClass="input-label"/>
        <ComboBox fx:id="platformComboBox"
                  promptText="Select platform..."
                  prefWidth="350"
                  prefHeight="35"/>
    </VBox>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" styleClass="cancel-button"/>
        <Button fx:id="addGameButton" text="Add Game" styleClass="primary-button"/>
    </HBox>
</VBox>