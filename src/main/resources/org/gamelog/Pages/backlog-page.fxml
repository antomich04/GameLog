<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="768.0" prefWidth="960.0" stylesheets="@../Styles/BackLogPage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.gamelog.controllers.BackLogPageController">
    <left>
        <fx:include source="../Components/navigation-bar.fxml" />
    </left>
    <center>
        <VBox alignment="TOP_LEFT" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30" left="30" right="30" top="80" />
            </padding>

            <HBox alignment="CENTER_LEFT" prefWidth="800" spacing="20">
                <VBox alignment="CENTER_LEFT" spacing="5" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-weight: bold;" text="Your Backlog">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Label>
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="20.0">
               <Button fx:id="addBacklogItemBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="48.0" prefWidth="48.0">
                  <graphic>
                          <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, black, 1, 0, 0, 0);" styleClass="clickableIcons">
                              <image>
                                  <Image url="@../Assets/add_icon.png" />
                              </image>
                          </ImageView>
                  </graphic>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
               <Button fx:id="filterBacklogItemsBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="48.0" prefWidth="48.0">
                  <graphic>
      
                          <ImageView fitHeight="45.0" fitWidth="45.0" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, black, 1, 0, 0, 0);" styleClass="clickableIcons">
                              <image>
                                  <Image url="@../Assets/filter_icon.png" />
                              </image>
                          </ImageView>
                  </graphic>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
                </HBox>
            </HBox>
            <StackPane prefHeight="600.0" prefWidth="800.0">

                <!-- The centered empty label -->
                <Label fx:id="backlogEmptyLabel" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>

                <!-- The tilepane for cards -->
                <TilePane fx:id="backlogContainer" alignment="TOP_LEFT" hgap="20" prefColumns="2" vgap="20" StackPane.alignment="TOP_LEFT">
                </TilePane>

            </StackPane>
        </VBox>
    </center>
</BorderPane>
