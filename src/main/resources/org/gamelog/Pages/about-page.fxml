<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="768.0" prefWidth="960.0" stylesheets="@../Styles/AboutPage_css/AboutPage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.gamelog.controllers.AboutPageController">
    <VBox alignment="TOP_CENTER" prefHeight="768.0" prefWidth="960.0" spacing="20">
        <padding>
            <Insets bottom="40.0" left="60.0" right="60.0" top="40.0" />
        </padding>

        <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="840.0">
            <children>
                <Button fx:id="backBtn" prefHeight="45.0" prefWidth="45.0" styleClass="backBtn" text="&lt;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Region HBox.hgrow="ALWAYS" />

                <Label styleClass="page-title" text="About GameLog">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Region prefHeight="45.0" prefWidth="45.0" />
            </children>
        </HBox>
        <ScrollPane fitToWidth="true" styleClass="about-scroll-pane" VBox.vgrow="ALWAYS">
         <content>
            <TextArea fx:id="aboutTextArea" editable="false" prefHeight="600.0" styleClass="about-text-area" wrapText="true" />
         </content>
        </ScrollPane>
    </VBox>
</AnchorPane>
