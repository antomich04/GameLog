<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="768.0" prefWidth="960.0" stylesheets="@../Styles/HomePage.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.gamelog.controllers.HomePageController">
    <left>
        <fx:include source="../Components/navigation-bar.fxml" />
    </left>
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30" left="30" right="30" top="80" />
            </padding>

            <HBox alignment="CENTER_LEFT" prefWidth="800" spacing="20">
                <VBox alignment="CENTER_LEFT" spacing="5" HBox.hgrow="ALWAYS">
                    <Label fx:id="welcomeLabel" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Label>
                </VBox>

                <Pane HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <StackPane fx:id="User_icon">
                        <Rectangle arcHeight="10" arcWidth="10" fill="#1C3849" height="55" width="55" />
                        <Label fx:id="iconLetter" style="-fx-text-fill: white;">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </StackPane>
                </HBox>
            </HBox>

            <StackPane VBox.vgrow="ALWAYS">

                <VBox alignment="CENTER" maxWidth="450" spacing="20">

                    <Label style="-fx-font-weight: bold; -fx-font-size: 26px; -fx-text-fill: #333;" text="Latest Games Played">
                        <VBox.margin>
                            <Insets top="30.0" />
                        </VBox.margin>
                    </Label>

                    <Label fx:id="emptyStateLabel" text="No games played so far!" style="-fx-font-size: 18px; -fx-font-style: italic;"
                           visible="false" managed="false">
                        <VBox.margin>
                            <Insets top="20.0" />
                        </VBox.margin>
                    </Label>

                    <VBox fx:id="cardsContainer" alignment="CENTER" spacing="20">
                    </VBox>
                </VBox>

                <VBox fx:id="loadingOverlay" alignment="CENTER" style="-fx-background-color: rgba(255, 255, 255, 0.85);"
                      visible="false" managed="false">
                    <children>
                        <ProgressIndicator prefHeight="400" prefWidth="400"/>
                        <Label text="Fetching Latest Games..." style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;" />
                    </children>
                </VBox>

            </StackPane>

        </VBox>
    </center>
</BorderPane>