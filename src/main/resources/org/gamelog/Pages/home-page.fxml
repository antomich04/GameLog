<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="768.0" prefWidth="960.0" stylesheets="@../Styles/HomePage.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.gamelog.controllers.HomePageController">
    <left>
        <fx:include source="navigation-bar.fxml" />
    </left>
    <center>
        <VBox alignment="TOP_LEFT" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30" left="30" right="30" top="80" />
            </padding>

            <HBox alignment="CENTER_LEFT" prefWidth="800" spacing="20">
                <VBox alignment="CENTER_LEFT" spacing="5" HBox.hgrow="ALWAYS">
                    <Label fx:id="welcomeLabel" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Label>
                </VBox>

                <Pane HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <StackPane fx:id="User_icon">
                        <Rectangle arcHeight="10" arcWidth="10" fill="#1C3849" height="55" width="55" />
                        <Label fx:id="iconLetter" style="-fx-text-fill: white;">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </StackPane>
                </HBox>
            </HBox>

            <VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="15">
                <Label style="-fx-font-weight: bold;" text="Nothing to see here...">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
            </VBox>
        </VBox>
    </center>
</BorderPane>