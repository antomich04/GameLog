         <VBox.margin>
            <Insets bottom="-28.0" />
         </VBox.margin>
        </ImageView>

        <Text text="Welcome to GameLog!">
            <font>
                <Font name="SansSerif Regular" size="40.0" />
            </font>
            <VBox.margin>
                <Insets bottom="24.0" />
            </VBox.margin>
        </Text>

        <Text fill="#4a5b85" text="Track your games, achievements, and progress with ease." textAlignment="CENTER" wrappingWidth="360.0">
            <font>
                <Font size="20.0" />
            </font>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </Text>

        <Button prefHeight="70.0" prefWidth="400.0" style="-fx-background-color: #1C3849; -fx-background-radius: 18; -fx-cursor: hand;" text="GET STARTED" textFill="WHITE">
            <font>
                <Font size="32.0" />
            </font>
            <VBox.margin>
                <Insets bottom="195.0" top="58.0" />
            </VBox.margin>
        </Button>
